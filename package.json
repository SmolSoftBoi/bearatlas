{
  "name": "bearatlas",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/web",
    "packages/worker"
  ],
  "scripts": {
    "dev": "yarn workspace @bearatlas/web dev",
    "worker": "yarn workspace @bearatlas/worker dev",
    "build": "yarn workspaces foreach -pt run build",
    "migrate": "yarn workspace @bearatlas/worker prisma:migrate",
    "seed": "yarn workspace @bearatlas/worker prisma:seed",
    "typesense:sync": "yarn workspace @bearatlas/worker typesense:sync",
    "lint": "yarn workspaces foreach -pt run lint || true",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "prettier": "3.3.3",
    "typescript": "5.6.3"
  },
  "packageManager": "yarn@1.22.22"
}
